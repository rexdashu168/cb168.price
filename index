<script>
// æª”æ¡ˆè·¯å¾‘è¨­å®šï¼ˆç¬¦åˆ GitHub Pages éƒ¨ç½²çµæ§‹ï¼‰
const FILES = { 
    CBPRICE_BASE: 'data/',           // åƒ¹æ ¼æª”æ¡ˆåœ¨ data/ ç›®éŒ„
    CB_INFO: '00_CB.xlsx'            // CBåŸºæœ¬è³‡æ–™åœ¨æ ¹ç›®éŒ„
};
const DB = { cbPrice: {}, cbPriceYears: {}, cbInfo: {} };
const META = { industries: {}, guarantees: { 'æœ‰æ“”ä¿': 0, 'ç„¡æ“”ä¿': 0 }, cbInfoLoaded: false };
const currentYear = new Date().getFullYear();
const availableYears = [];
for(let y = 2011; y <= currentYear; y++) availableYears.push(y);

let MODE = 'stock';      // stock, industry, overall
let VIEW = 'table';      // table, chart
let PERIOD = '1y';       // 3m, 6m, 1y, 2y, 3y, all
let FILTER = { industry: '', guarantee: '' };

// ç”¢æ¥­Emojiå°ç…§ï¼ˆä½¿ç”¨ç°¡åŒ–ç”¢æ¥­åç¨±ï¼‰
function industryEmoji(ind) {
    const map = {
        'åŠå°é«”æ¥­': 'ğŸ”¬', 'é›¶çµ„ä»¶æ¥­': 'âš¡', 'å…‰é›»ç”¢æ¥­': 'ğŸ’¡', 'é›»è…¦é€±é‚Š': 'ğŸ’»',
        'é€šä¿¡ç¶²è·¯': 'ğŸ“¡', 'é›»å­é€šè·¯': 'ğŸ”Œ', 'å…¶ä»–é›»å­': 'ğŸ“±', 'è³‡è¨Šæœå‹™': 'ğŸ–¥ï¸',
        'ç”ŸæŠ€é†«ç™‚': 'ğŸ§¬', 'åŒ–å·¥ç”¢æ¥­': 'ğŸ§ª', 'å¡‘è† ç”¢æ¥­': 'ğŸ¨', 'ç´¡ç¹”çº–ç¶­': 'ğŸ§µ',
        'é›»æ©Ÿæ©Ÿæ¢°': 'âš™ï¸', 'é‹¼éµç”¢æ¥­': 'ğŸ”©', 'æ±½è»Šç”¢æ¥­': 'ğŸš—', 'èˆªé‹ç”¢æ¥­': 'ğŸš¢',
        'è§€å…‰é¤æ—…': 'ğŸ¨', 'é‡‘èä¿éšª': 'ğŸ¦', 'å»ºæç‡Ÿé€ ': 'ğŸ—ï¸', 'é£Ÿå“ç”¢æ¥­': 'ğŸœ',
        'è²¿æ˜“ç™¾è²¨': 'ğŸ›’', 'æ²¹é›»ç‡ƒæ°£': 'â›½', 'æ–‡åŒ–å‰µæ„': 'ğŸ¬', 'å…¶ä»–å‚³ç”¢': 'ğŸ“¦',
        'é›»å™¨é›»çºœ': 'ğŸ”‹', 'é€ ç´™ç”¢æ¥­': 'ğŸ“„', 'æ°´æ³¥ç”¢æ¥­': 'ğŸ§±', 'è¾²æ¥­ç§‘æŠ€': 'ğŸŒ¾'
    };
    return map[ind] || 'ğŸ“¦';
}

// æ•¸å­—è£œç©ºæ ¼å°é½Š
function padNum(n) {
    const s = String(n);
    return s.length < 3 ? '\u00A0'.repeat(3 - s.length) + s : s;
}

function setMode(m) {
    MODE = m;
    document.querySelectorAll('.sub-tab').forEach(t => t.classList.toggle('active', t.textContent.includes(
        m === 'stock' ? 'å€‹è‚¡' : m === 'industry' ? 'ç”¢æ¥­' : 'æ•´é«”'
    )));
    renderStatsBox();
    renderTable();
}

function setView(v) {
    VIEW = v;
    document.querySelectorAll('.view-tab').forEach((t,i) => t.classList.toggle('active', ['table','chart'][i] === v));
    document.getElementById('tableArea').classList.toggle('hidden', v !== 'table');
    document.getElementById('chartArea').classList.toggle('hidden', v !== 'chart');
}

function setPeriod(p) {
    PERIOD = p;
    document.querySelectorAll('.period-tab').forEach(t => {
        const txt = t.textContent;
        t.classList.toggle('active', 
            (p === '3m' && txt === '3å€‹æœˆ') || (p === '6m' && txt === '6å€‹æœˆ') ||
            (p === '1y' && txt === '1å¹´') || (p === '2y' && txt === '2å¹´') ||
            (p === '3y' && txt === '3å¹´') || (p === 'all' && txt === 'å…¨éƒ¨')
        );
    });
    renderTable();
}

function setFilter(type, value) {
    if(FILTER[type] === value) {
        FILTER[type] = ''; // å–æ¶ˆç¯©é¸
    } else {
        FILTER[type] = value;
    }
    renderStatsBox();
    updateFilterStatus();
    renderTable();
}

function clearFilter() {
    FILTER = { industry: '', guarantee: '' };
    renderStatsBox();
    updateFilterStatus();
    renderTable();
}

function updateFilterStatus() {
    const el = document.getElementById('filterStatus');
    const hasFilter = FILTER.industry || FILTER.guarantee;
    el.classList.toggle('hidden', !hasFilter);
    
    if(hasFilter) {
        const tags = [];
        if(FILTER.industry) tags.push(FILTER.industry);
        if(FILTER.guarantee) tags.push(FILTER.guarantee);
        document.getElementById('filterTag').textContent = tags.join(' + ');
    }
}

async function init() {
    document.getElementById('loadStatus').innerText = 'è¼‰å…¥CBåŸºæœ¬è³‡æ–™...';
    await loadCbInfo();
    renderYearBtns();
    renderStatsBox();
    document.getElementById('loading').classList.add('hidden');
}

async function loadCbInfo() {
    // ä½¿ç”¨è¨­å®šçš„è·¯å¾‘
    const paths = [FILES.CB_INFO, 'data/00_CB.xlsx'];
    
    for(const path of paths) {
        try {
            console.log('å˜—è©¦è¼‰å…¥:', path);
            const res = await fetch(path);
            if(!res.ok) {
                console.log('æª”æ¡ˆä¸å­˜åœ¨:', path, res.status);
                continue;
            }
            const wb = XLSX.read(await res.arrayBuffer(), {type: 'array'});
            console.log('å·¥ä½œè¡¨:', wb.SheetNames);
            
            // å·¥ä½œè¡¨åç¨±ï¼šå„ªå…ˆä½¿ç”¨ã€Œ01ã€
            const sheetNames = ['01', '01_ALLCBåŸºæœ¬è³‡æ–™', wb.SheetNames[0]].filter(s => s && wb.Sheets[s]);
            
            sheetNames.forEach(sn => {
                const sheet = wb.Sheets[sn];
                if(!sheet) return;
                const rows = XLSX.utils.sheet_to_json(sheet);
                console.log('è®€å–å·¥ä½œè¡¨:', sn, 'ç­†æ•¸:', rows.length);
                
                rows.forEach(r => {
                    const code = String(r['CBä»£è™Ÿ'] || r['ä»£è™Ÿ'] || '').trim();
                    if(!code || code.length < 4) return;
                    
                    // Læ¬„ï¼šç”¢æ¥­åˆ†é¡
                    const industry = r['ç”¢æ¥­åˆ†é¡'] || r['ç”¢æ¥­'] || 'å…¶ä»–';
                    const simpleIndustry = simplifyIndustry(industry);
                    
                    const guarVal = r['æ“”ä¿'] || '';
                    const guarantee = (guarVal === 'æœ‰æ“”ä¿' || guarVal === 'Y' || guarVal === 'æœ‰') ? 'æœ‰æ“”ä¿' : 'ç„¡æ“”ä¿';
                    
                    const methodVal = r['ç™¼è¡Œæ–¹å¼'] || '';
                    const method = methodVal.includes('ç«¶') ? 'ç«¶æ‹' : (methodVal.includes('è©¢') ? 'è©¢åœˆ' : '');
                    
                    DB.cbInfo[code] = {
                        name: r['CBç°¡ç¨±'] || r['åç¨±'] || '',
                        stockCode: String(r['è‚¡ç¥¨ä»£è™Ÿ'] || '').replace(/\.0$/, ''),
                        stockName: r['æ¨™çš„ç°¡ç¨±'] || '',
                        industry: simpleIndustry,
                        convPrice: parseFloat(r['è½‰æ›åƒ¹æ ¼'] || r['è½‰æ›åƒ¹æ ¼(å…ƒ)']) || 0,
                        guarantee: guarantee,
                        method: method
                    };
                    
                    // çµ±è¨ˆç”¢æ¥­
                    META.industries[simpleIndustry] = (META.industries[simpleIndustry] || 0) + 1;
                    // çµ±è¨ˆæ“”ä¿
                    META.guarantees[guarantee] = (META.guarantees[guarantee] || 0) + 1;
                });
            });
            
            if(Object.keys(DB.cbInfo).length > 0) {
                META.cbInfoLoaded = true;
                console.log('âœ… CBè³‡æ–™è¼‰å…¥æˆåŠŸ:', path, Object.keys(DB.cbInfo).length, 'ç­†');
                console.log('ç”¢æ¥­çµ±è¨ˆ:', META.industries);
                return;
            }
        } catch(e) { 
            console.log('è¼‰å…¥å¤±æ•—:', path, e.message);
        }
    }
    console.log('âš ï¸ 00_CB.xlsx æœªè¼‰å…¥ï¼Œè«‹æ‰‹å‹•ä¸Šå‚³');
}

// ç”¢æ¥­åç¨±ç°¡åŒ–å°ç…§ï¼ˆèˆ‡ä¸»æª”ä¸€è‡´ï¼‰
function simplifyIndustry(ind) {
    const map = {
        'å…‰é›»æ¥­': 'å…‰é›»ç”¢æ¥­', 'å…¶ä»–æ¥­': 'å…¶ä»–å‚³ç”¢', 'å…¶ä»–æ¥­é›»å­æ¥­': 'å…¶ä»–é›»å­',
        'å…¶ä»–é›»å­æ¥­': 'å…¶ä»–é›»å­', 'åŒ–å­¸å·¥æ¥­': 'åŒ–å·¥ç”¢æ¥­', 'åŠå°é«”æ¥­': 'åŠå°é«”æ¥­',
        'å¡‘è† å·¥æ¥­': 'å¡‘è† ç”¢æ¥­', 'å»ºæç‡Ÿé€ æ¥­': 'å»ºæç‡Ÿé€ ', 'æ–‡åŒ–å‰µæ„æ¥­': 'æ–‡åŒ–å‰µæ„',
        'æ©¡è† å·¥æ¥­': 'å…¶ä»–å‚³ç”¢', 'æ°´æ³¥å·¥æ¥­': 'æ°´æ³¥ç”¢æ¥­', 'æ±½è»Šå·¥æ¥­': 'æ±½è»Šç”¢æ¥­',
        'æ²¹é›»ç‡ƒæ°£æ¥­': 'æ²¹é›»ç‡ƒæ°£', 'ç»ç’ƒé™¶ç“·': 'å…¶ä»–å‚³ç”¢', 'ç”ŸæŠ€é†«ç™‚æ¥­': 'ç”ŸæŠ€é†«ç™‚',
        'ç´¡ç¹”çº–ç¶­': 'ç´¡ç¹”çº–ç¶­', 'èˆªé‹æ¥­': 'èˆªé‹ç”¢æ¥­', 'è§€å…‰é¤æ—…': 'è§€å…‰é¤æ—…',
        'è­‰åˆ¸æ¥­': 'é‡‘èä¿éšª', 'è²¿æ˜“ç™¾è²¨æ¥­': 'è²¿æ˜“ç™¾è²¨', 'è³‡è¨Šæœå‹™æ¥­': 'è³‡è¨Šæœå‹™',
        'è¾²æ¥­ç§‘æŠ€æ¥­': 'è¾²æ¥­ç§‘æŠ€', 'é€šä¿¡ç¶²è·¯æ¥­': 'é€šä¿¡ç¶²è·¯', 'é€ ç´™å·¥æ¥­': 'é€ ç´™ç”¢æ¥­',
        'é‡‘æ§æ¥­': 'é‡‘èä¿éšª', 'éŠ€è¡Œæ¥­': 'é‡‘èä¿éšª', 'é‹¼éµå·¥æ¥­': 'é‹¼éµç”¢æ¥­',
        'é›»å™¨é›»çºœ': 'é›»å™¨é›»çºœ', 'é›»å­é€šè·¯æ¥­': 'é›»å­é€šè·¯', 'é›»å­é›¶çµ„ä»¶æ¥­': 'é›¶çµ„ä»¶æ¥­',
        'é›»æ©Ÿæ©Ÿæ¢°': 'é›»æ©Ÿæ©Ÿæ¢°', 'é›»è…¦åŠé€±é‚Šè¨­å‚™æ¥­': 'é›»è…¦é€±é‚Š', 'é£Ÿå“å·¥æ¥­': 'é£Ÿå“ç”¢æ¥­'
    };
    return map[ind] || ind || 'å…¶ä»–å‚³ç”¢';
}

function renderStatsBox() {
    const codes = Object.keys(DB.cbPrice);
    let totalRecords = 0;
    codes.forEach(c => totalRecords += DB.cbPrice[c].length);
    const loadedYears = Object.keys(DB.cbPriceYears).length;
    const sortedIndustries = Object.entries(META.industries).sort((a,b) => b[1]-a[1]);
    const cbInfoCnt = Object.keys(DB.cbInfo).length;
    
    let html = `
        <div class="section-title">ğŸ“Š çµ±è¨ˆæ•¸æ“š</div>
        <div class="stats-grid">
            <div class="stat-item"><div class="stat-num">${cbInfoCnt}</div><div class="stat-label">å…¨éƒ¨CB</div></div>
            <div class="stat-item"><div class="stat-num">${codes.length}</div><div class="stat-label">å·²è¼‰å…¥CB</div></div>
            <div class="stat-item"><div class="stat-num">${loadedYears}</div><div class="stat-label">å·²è¼‰å…¥å¹´åº¦</div></div>
            <div class="stat-item clickable ${FILTER.guarantee === 'æœ‰æ“”ä¿' ? 'active' : ''}" onclick="setFilter('guarantee', 'æœ‰æ“”ä¿')"><div class="stat-num">${padNum(META.guarantees['æœ‰æ“”ä¿'])}</div><div class="stat-label">æœ‰æ“”ä¿</div></div>
            <div class="stat-item clickable ${FILTER.guarantee === 'ç„¡æ“”ä¿' ? 'active' : ''}" onclick="setFilter('guarantee', 'ç„¡æ“”ä¿')"><div class="stat-num">${padNum(META.guarantees['ç„¡æ“”ä¿'])}</div><div class="stat-label">ç„¡æ“”ä¿</div></div>
        </div>
    `;
    
    // å¦‚æœæ²’è¼‰å…¥CBè³‡æ–™ï¼Œé¡¯ç¤ºä¸Šå‚³æŒ‰éˆ•
    if(cbInfoCnt === 0) {
        html += `
            <div class="upload-hint">
                <div class="hint-icon">ğŸ“‚</div>
                <div class="hint-text">è«‹ä¸Šå‚³ 00_CB.xlsx ä»¥è¼‰å…¥CBåŸºæœ¬è³‡æ–™èˆ‡ç”¢æ¥­åˆ†é¡</div>
                <label class="upload-btn">
                    <input type="file" accept=".xlsx,.xls" onchange="handleCbUpload(this)" style="display:none">
                    ğŸ“¤ é¸æ“‡æª”æ¡ˆ
                </label>
            </div>
        `;
    }
    
    html += `
        <div class="section-title">ğŸ“… é¸æ“‡å¹´åº¦è¼‰å…¥</div>
        <div class="year-btns" id="yearBtns"></div>
    `;
    
    // ç”¢æ¥­æ¨™ç±¤å€å¡Šï¼ˆæœ‰è³‡æ–™æ™‚ç›´æ¥é¡¯ç¤ºï¼‰
    if(sortedIndustries.length > 0) {
        html += `
            <div class="section-title">ğŸ“Š å„ç”¢æ¥­CBåˆ†ä½ˆ</div>
            <div class="ind-grid">
                ${sortedIndustries.map(([ind, cnt]) => `
                    <div class="ind-tag ${FILTER.industry === ind ? 'active' : ''}" onclick="setFilter('industry', '${ind}')">
                        <span class="emoji">${industryEmoji(ind)}</span>
                        <span class="name">${ind}</span>
                        <span class="num">${cnt}</span>
                    </div>
                `).join('')}
            </div>
        `;
    }
    
    document.getElementById('statsBox').innerHTML = html;
    renderYearBtns();
}

// è™•ç†ä¸Šå‚³ 00_CB.xlsx
async function handleCbUpload(input) {
    const file = input.files[0];
    if(!file) return;
    
    try {
        const data = await file.arrayBuffer();
        const wb = XLSX.read(data, {type: 'array'});
        
        // å˜—è©¦è®€å–ã€Œ01ã€å·¥ä½œè¡¨
        const sheetNames = ['01', '01_ALLCBåŸºæœ¬è³‡æ–™', wb.SheetNames[0]].filter(s => s && wb.Sheets[s]);
        
        sheetNames.forEach(sn => {
            const sheet = wb.Sheets[sn];
            if(!sheet) return;
            XLSX.utils.sheet_to_json(sheet).forEach(r => {
                const code = String(r['CBä»£è™Ÿ'] || r['ä»£è™Ÿ'] || '').trim();
                if(!code || code.length < 4) return;
                
                // Læ¬„ï¼šç”¢æ¥­åˆ†é¡
                const industry = r['ç”¢æ¥­åˆ†é¡'] || r['ç”¢æ¥­'] || 'å…¶ä»–';
                const simpleIndustry = simplifyIndustry(industry);
                
                const guarVal = r['æ“”ä¿'] || '';
                const guarantee = (guarVal === 'æœ‰æ“”ä¿' || guarVal === 'Y' || guarVal === 'æœ‰') ? 'æœ‰æ“”ä¿' : 'ç„¡æ“”ä¿';
                
                const methodVal = r['ç™¼è¡Œæ–¹å¼'] || '';
                const method = methodVal.includes('ç«¶') ? 'ç«¶æ‹' : (methodVal.includes('è©¢') ? 'è©¢åœˆ' : '');
                
                DB.cbInfo[code] = {
                    name: r['CBç°¡ç¨±'] || r['åç¨±'] || '',
                    stockCode: String(r['è‚¡ç¥¨ä»£è™Ÿ'] || '').replace(/\.0$/, ''),
                    stockName: r['æ¨™çš„ç°¡ç¨±'] || '',
                    industry: simpleIndustry,
                    convPrice: parseFloat(r['è½‰æ›åƒ¹æ ¼'] || r['è½‰æ›åƒ¹æ ¼(å…ƒ)']) || 0,
                    guarantee: guarantee,
                    method: method
                };
                
                META.industries[simpleIndustry] = (META.industries[simpleIndustry] || 0) + 1;
                META.guarantees[guarantee] = (META.guarantees[guarantee] || 0) + 1;
            });
        });
        
        if(Object.keys(DB.cbInfo).length > 0) {
            META.cbInfoLoaded = true;
            console.log('ä¸Šå‚³æˆåŠŸ:', Object.keys(DB.cbInfo).length, 'ç­†CB');
            renderStatsBox();
            renderTable();
        } else {
            alert('ç„¡æ³•è§£ææª”æ¡ˆï¼Œè«‹ç¢ºèªæ˜¯å¦ç‚ºæ­£ç¢ºçš„ 00_CB.xlsx');
        }
    } catch(e) {
        console.error('ä¸Šå‚³å¤±æ•—:', e);
        alert('æª”æ¡ˆè®€å–å¤±æ•—ï¼š' + e.message);
    }
}

function renderYearBtns() {
    const container = document.getElementById('yearBtns');
    if(!container) return;
    container.innerHTML = availableYears.map(y => `
        <div class="year-btn ${DB.cbPriceYears[y] ? 'active' : ''}" id="btn${y}" onclick="loadYear(${y})">
            ${DB.cbPriceYears[y] ? 'âœ…' : 'ğŸ“'} ${y}
        </div>
    `).join('');
}

async function loadYear(year) {
    if(DB.cbPriceYears[year]) return;
    const btn = document.getElementById('btn' + year);
    btn.classList.add('loading');
    btn.innerHTML = 'â³ è¼‰å…¥ä¸­...';
    
    const urls = [FILES.CBPRICE_BASE + `CB_price_${year}_cleaned.xlsx`, FILES.CBPRICE_BASE + `CB_price_${year}.xlsx`];
    let success = false;
    for(const url of urls) {
        try {
            const res = await fetch(url);
            if(!res.ok) continue;
            const wb = XLSX.read(await res.arrayBuffer(), {type: 'array'});
            parseWorkbook(wb);
            success = true;
            break;
        } catch(e) {}
    }
    
    if(success) {
        DB.cbPriceYears[year] = true;
        renderStatsBox();
        renderTable();
    } else {
        alert(`è¼‰å…¥ ${year} å¹´åº¦å¤±æ•—`);
        btn.classList.remove('loading');
        btn.innerHTML = `ğŸ“ ${year}`;
    }
}

function parseWorkbook(wb) {
    wb.SheetNames.forEach(sn => {
        if(!/^\d{8}$/.test(sn.trim())) return;
        const ds = sn.trim();
        const fd = `${ds.substring(0,4)}/${ds.substring(4,6)}/${ds.substring(6,8)}`;
        XLSX.utils.sheet_to_json(wb.Sheets[sn]).forEach(r => {
            const code = String(r['ä»£è™Ÿ'] || '').trim();
            const close = parseFloat(r['æ”¶å¸‚']) || 0;
            if(!code || close <= 0) return;
            if(!DB.cbPrice[code]) DB.cbPrice[code] = [];
            DB.cbPrice[code].push({
                date: fd, dateNum: parseInt(ds),
                open: parseFloat(r['é–‹å¸‚']) || close,
                high: parseFloat(r['æœ€é«˜']) || close,
                low: parseFloat(r['æœ€ä½']) || close,
                close: close,
                change: parseFloat(r['æ¼²è·Œ']) || 0,
                vol: parseFloat(r['å–®ä½']) || 0
            });
        });
    });
    Object.keys(DB.cbPrice).forEach(c => DB.cbPrice[c].sort((a, b) => a.dateNum - b.dateNum));
}

// æ ¹æ“šæ™‚é–“å€é–“ç¯©é¸åƒ¹æ ¼è³‡æ–™
function filterByPeriod(prices) {
    if(PERIOD === 'all' || !prices.length) return prices;
    
    const now = new Date();
    let cutoffDate;
    switch(PERIOD) {
        case '3m': cutoffDate = new Date(now.setMonth(now.getMonth() - 3)); break;
        case '6m': cutoffDate = new Date(now.setMonth(now.getMonth() - 6)); break;
        case '1y': cutoffDate = new Date(now.setFullYear(now.getFullYear() - 1)); break;
        case '2y': cutoffDate = new Date(now.setFullYear(now.getFullYear() - 2)); break;
        case '3y': cutoffDate = new Date(now.setFullYear(now.getFullYear() - 3)); break;
        default: return prices;
    }
    
    const cutoffNum = parseInt(cutoffDate.toISOString().slice(0,10).replace(/-/g, ''));
    return prices.filter(p => p.dateNum >= cutoffNum);
}

function renderTable() {
    const q = document.getElementById('search').value.toLowerCase().trim();
    const codes = Object.keys(DB.cbPrice).sort();
    
    // ç¯©é¸
    const filtered = codes.filter(c => {
        const info = DB.cbInfo[c] || {};
        
        // æœå°‹æ¢ä»¶
        const matchSearch = !q || c.toLowerCase().includes(q) || 
            (info.name||'').toLowerCase().includes(q) || 
            (info.industry||'').toLowerCase().includes(q);
        
        // ç”¢æ¥­ç¯©é¸
        const matchIndustry = !FILTER.industry || (info.industry || '') === FILTER.industry;
        
        // æ“”ä¿ç¯©é¸
        const matchGuarantee = !FILTER.guarantee || (info.guarantee || '') === FILTER.guarantee;
        
        return matchSearch && matchIndustry && matchGuarantee;
    });
    
    // æ›´æ–°ç¯©é¸è¨ˆæ•¸
    document.getElementById('filterCount').textContent = filtered.length;
    
    if(filtered.length === 0) {
        document.getElementById('tableBody').innerHTML = `<tr><td colspan="10" style="text-align:center;padding:40px;color:#999">${codes.length === 0 ? 'è«‹å…ˆé»æ“Šä¸Šæ–¹å¹´åº¦æŒ‰éˆ•è¼‰å…¥è³‡æ–™' : 'ç„¡ç¬¦åˆæ¢ä»¶çš„CB'}</td></tr>`;
        return;
    }
    
    document.getElementById('tableBody').innerHTML = filtered.slice(0, 300).map(code => {
        const allPrices = DB.cbPrice[code];
        const p = filterByPeriod(allPrices);
        if(p.length === 0) return '';
        
        const info = DB.cbInfo[code] || {};
        const first = p[0], last = p[p.length - 1];
        const high = Math.max(...p.map(x => x.high)), low = Math.min(...p.map(x => x.low));
        const chg = last.close - first.close, pct = first.close > 0 ? (chg / first.close * 100) : 0;
        
        return `<tr onclick="openDetail('${code}')">
            <td class="code">${code}</td>
            <td>${info.name || '-'}</td>
            <td class="hide-mobile">${info.industry || '-'}</td>
            <td class="text-center">${p.length}</td>
            <td class="hide-mobile">${first.date}</td>
            <td class="hide-mobile">${last.date}</td>
            <td class="text-right">${high.toFixed(2)}</td>
            <td class="text-right">${low.toFixed(2)}</td>
            <td class="text-right">${last.close.toFixed(2)}</td>
            <td class="text-right ${chg >= 0 ? 'up' : 'down'}">${chg >= 0 ? '+' : ''}${pct.toFixed(1)}%</td>
        </tr>`;
    }).filter(r => r).join('');
}

function openDetail(code) {
    const allPrices = DB.cbPrice[code];
    if(!allPrices) return;
    
    const p = filterByPeriod(allPrices);
    if(p.length === 0) return;
    
    const info = DB.cbInfo[code] || {};
    const first = p[0], last = p[p.length - 1];
    const high = Math.max(...p.map(x => x.high)), low = Math.min(...p.map(x => x.low));
    
    document.getElementById('modalTitle').innerText = info.name ? `${info.name} (${code})` : code;
    
    let html = `
        <div style="font-size:13px;color:#666;margin-bottom:12px">
            ${info.stockName ? `æ¨™çš„: ${info.stockName}(${info.stockCode})` : ''}
            ${info.industry ? ` | ç”¢æ¥­: ${info.industry}` : ''}
            ${info.convPrice ? ` | è½‰æ›åƒ¹: ${info.convPrice}å…ƒ` : ''}
            ${info.guarantee ? ` | ${info.guarantee}` : ''}
        </div>
        <div class="modal-stats">
            <div class="modal-stat"><div class="val">${high.toFixed(2)}</div><div class="lbl">æœŸé–“æœ€é«˜</div></div>
            <div class="modal-stat"><div class="val">${low.toFixed(2)}</div><div class="lbl">æœŸé–“æœ€ä½</div></div>
            <div class="modal-stat"><div class="val">${last.close.toFixed(2)}</div><div class="lbl">æœ€æ–°æ”¶ç›¤</div></div>
            <div class="modal-stat"><div class="val">${p.length}</div><div class="lbl">è³‡æ–™ç­†æ•¸</div></div>
        </div>
        
        <!-- å½ˆçª—å…§çš„åœ–/è¡¨åˆ‡æ› -->
        <div class="view-tabs" style="margin-bottom:12px">
            <div class="view-tab active" onclick="showModalView('table','${code}')">ğŸ“‹ è¡¨æ ¼</div>
            <div class="view-tab" onclick="showModalView('chart','${code}')">ğŸ“ˆ èµ°å‹¢åœ–</div>
        </div>
        <div class="period-tabs" style="margin-bottom:12px">
            <div class="period-tab ${PERIOD==='3m'?'active':''}" onclick="setModalPeriod('3m','${code}')">3å€‹æœˆ</div>
            <div class="period-tab ${PERIOD==='6m'?'active':''}" onclick="setModalPeriod('6m','${code}')">6å€‹æœˆ</div>
            <div class="period-tab ${PERIOD==='1y'?'active':''}" onclick="setModalPeriod('1y','${code}')">1å¹´</div>
            <div class="period-tab ${PERIOD==='2y'?'active':''}" onclick="setModalPeriod('2y','${code}')">2å¹´</div>
            <div class="period-tab ${PERIOD==='3y'?'active':''}" onclick="setModalPeriod('3y','${code}')">3å¹´</div>
            <div class="period-tab ${PERIOD==='all'?'active':''}" onclick="setModalPeriod('all','${code}')">å…¨éƒ¨</div>
        </div>
        
        <!-- èµ°å‹¢åœ–ä½”ä½ -->
        <div id="modalChart" class="chart-area hidden" style="min-height:200px;margin-bottom:12px">
            <div class="chart-placeholder">
                <div class="icon">ğŸ“ˆ</div>
                <div>èµ°å‹¢åœ–åŠŸèƒ½é–‹ç™¼ä¸­</div>
            </div>
        </div>
        
        <!-- è¡¨æ ¼ -->
        <div id="modalTable">
            <div style="font-size:13px;color:#666;margin-bottom:10px">åƒ¹æ ¼æœŸé–“: ${first.date} ~ ${last.date}</div>
            <div class="table-wrap" style="max-height:300px;overflow-y:auto"><table>
                <thead><tr><th>æ—¥æœŸ</th><th class="text-right">é–‹ç›¤</th><th class="text-right">æœ€é«˜</th><th class="text-right">æœ€ä½</th><th class="text-right">æ”¶ç›¤</th><th class="text-right">æ¼²è·Œ</th><th class="text-right">å¼µæ•¸</th></tr></thead>
                <tbody>`;
    
    [...p].reverse().slice(0, 100).forEach(x => {
        const cls = x.change > 0 ? 'up' : x.change < 0 ? 'down' : '';
        html += `<tr><td>${x.date}</td><td class="text-right">${x.open.toFixed(2)}</td><td class="text-right">${x.high.toFixed(2)}</td><td class="text-right">${x.low.toFixed(2)}</td><td class="text-right">${x.close.toFixed(2)}</td><td class="text-right ${cls}">${x.change > 0 ? '+' : ''}${x.change.toFixed(2)}</td><td class="text-right">${x.vol}</td></tr>`;
    });
    
    html += '</tbody></table></div></div>';
    if(p.length > 100) html += '<div style="text-align:center;padding:10px;color:#999;font-size:13px">åƒ…é¡¯ç¤ºæœ€è¿‘100ç­†</div>';
    
    document.getElementById('modalBody').innerHTML = html;
    document.getElementById('modal').classList.add('show');
}

function showModalView(v, code) {
    document.getElementById('modalChart').classList.toggle('hidden', v !== 'chart');
    document.getElementById('modalTable').classList.toggle('hidden', v !== 'table');
    document.querySelectorAll('#modalBody .view-tab').forEach((t,i) => t.classList.toggle('active', ['table','chart'][i] === v));
}

function setModalPeriod(p, code) {
    PERIOD = p;
    document.querySelectorAll('#modalBody .period-tab').forEach(t => {
        const txt = t.textContent;
        t.classList.toggle('active', 
            (p === '3m' && txt === '3å€‹æœˆ') || (p === '6m' && txt === '6å€‹æœˆ') ||
            (p === '1y' && txt === '1å¹´') || (p === '2y' && txt === '2å¹´') ||
            (p === '3y' && txt === '3å¹´') || (p === 'all' && txt === 'å…¨éƒ¨')
        );
    });
    // é‡æ–°é–‹å•Ÿè©³æƒ…ä»¥æ›´æ–°è³‡æ–™
    openDetail(code);
}

function closeModal() { document.getElementById('modal').classList.remove('show'); }
window.onload = init;
</script>

